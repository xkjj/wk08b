<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>

<body>

    <nav class="navbar text-bg-warning">
        <div class="container-fluid text-white">
            <a class="navbar-brand text-black" href="/news">News</a>
        </div>
    </nav>

    <div class="container my-4">

        <div class = "row row-cols-4">
            
            <% burgers.forEach((burger) => { %>

                <div class="col">
                    <%=burger.b_name %>  
                </div>

            <% }); %>

        </div>

        <div class="row row-cols-3">


            <% news_data.forEach(row=> { 
                
                let changedate = row.publish_d;
                changedate = changedate.toLocaleString('en-GB').slice(0, 10);

                
                %>

                <div class="col">
                    <div class="card text-bg-light mb-3 border-warning ">
                        <div class="card-header"><%=row.topic_name%></div>
                        <div class="card-body">
                            <h5 class="card-title"><%=changedate%></h5>
                            <p class="card-text"><%=row.headline %> </p>
                        </div>
                    </div>
                </div>

            <% }); %>

        </div>
    </div>

</body>

</html>